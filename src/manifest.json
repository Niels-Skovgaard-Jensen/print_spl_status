
{
  "manifest_version": 3,
  "name": "Training Status Printer",
  "version": "1.2.1",
  "description": "Formats training status pages for A4 printing or mobile editing with auto-save, export/import JSON data, and persistent notes.",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://startlist.club/*"],
      "js": [
        "utils.js",
        "styles.js", 
        "dataExtractor.js",
        "printFormatter.js",
        "mobileFormatter.js",
        "content.js"
      ]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png",
    "512": "icons/icon512.png",
    "1024": "icons/icon1024.png" 
  }
}