
{
  "manifest_version": 3,
  "name": "Training Status Printer",
  "version": "1.0",
  "description": "Formats the training status page for A4 printing.",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png",
    "512": "icons/icon512.png",
    "1024": "icons/icon1024.png" 
  }
}